<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:padding="20dp"
    android:elevation="13dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/Background"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rec_rec_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_burger_king" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_centerVertical="true"
    android:orientation="horizontal"
    android:layout_toEndOf="@id/rec_rec_img"
    android:weightSum="2">
    <LinearLayout
        android:id="@+id/linlyt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recyc_popu_jobname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="viewStart"
            android:maxLength="20"
            android:paddingHorizontal="3dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:text="Android Developer"/>
        <TextView
            android:id="@+id/recyc_popu_companyname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="20"
            android:textAlignment="viewStart"
            android:textColor="@color/Grey"
            android:paddingHorizontal="3dp"
            android:text="Burger King"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rec_rec_img"
        android:gravity="end"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recyc_popu_salary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="viewEnd"
            android:paddingHorizontal="3dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:maxLength="10"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:text="$16000/year"/>
        <TextView
            android:id="@+id/recyc_popu_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="15"
            android:textAlignment="viewEnd"
            android:textColor="@color/Grey"
            android:paddingHorizontal="3dp"
            android:text="Florida/USA"/>

    </LinearLayout>

</LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>