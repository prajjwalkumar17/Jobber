<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/master_med"
    app:cardCornerRadius="20dp"
    android:padding="20dp"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:background="@color/master_med"
       android:paddingVertical="10dp"
       android:paddingHorizontal="5dp"
       android:layout_height="match_parent">
       <RelativeLayout
           android:id="@+id/relativelayout1"
           android:layout_width="match_parent"
           android:padding="10dp"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/rec_feat_joblogo"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_alignParentStart="true"
               android:background="@drawable/bg_squared"
               android:elevation="2dp"
               android:src="@drawable/ic_google" />

           <LinearLayout
               android:id="@+id/linearLayout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@id/rec_feat_joblogo"
               android:layout_marginStart="30dp"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/rec_feat_jobRole"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:maxLength="17"
                   android:layout_marginBottom="5dp"
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:textColor="@color/Background"/>
               <TextView
                   android:id="@+id/rec_feat_comname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:layout_marginTop="5dp"
                   android:textSize="12sp"
                   android:text=""/>
           </LinearLayout>

           <ImageView
               android:id="@+id/recycler_feat_bookmarkbot"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentEnd="true"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@+id/linearLayout"
               android:elevation="2dp"
               android:src="@drawable/ic_addbookmark" />


       </RelativeLayout>

       <LinearLayout
           android:id="@+id/linlayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/relativelayout1"
           android:gravity="center"
           android:padding="13dp"
           android:orientation="horizontal"
           android:weightSum="3">
           <TextView
               android:id="@+id/rec_feat_duration"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:maxLength="8"
               android:layout_marginEnd="10dp"
               android:paddingVertical="3dp"
               android:paddingHorizontal="10dp"
               android:background="@drawable/bg_curved_light"/>
           <TextView
               android:id="@+id/rec_feat_jobtype"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:maxLength="9"
               android:layout_marginEnd="10dp"
               android:layout_marginStart="10dp"
               android:paddingVertical="3dp"
               android:paddingHorizontal="10dp"
               android:background="@drawable/bg_curved_light"/>
           <TextView
               android:id="@+id/rec_feat_expreq"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:maxLength="8"
               android:layout_marginStart="10dp"
               android:paddingVertical="3dp"
               android:paddingHorizontal="10dp"
               android:background="@drawable/bg_curved_light"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/linlayout"
           android:layout_marginHorizontal="20dp"
           android:layout_marginVertical="15dp"
           android:orientation="horizontal"
           android:weightSum="2">
           <TextView
               android:id="@+id/rec_feat_jobsal"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:textAlignment="center"
               android:layout_weight="1"
               android:paddingHorizontal="3dp"
               android:text=""/>
           <TextView
               android:id="@+id/rec_feat_jobloc"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:textAlignment="center"
               android:paddingHorizontal="3dp"
               android:maxLength="17"
               android:text=""/>

       </LinearLayout>
   </RelativeLayout>

    <ImageView
        android:id="@+id/rec_feat_completeselbot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mk_recycler"/>
</androidx.cardview.widget.CardView>